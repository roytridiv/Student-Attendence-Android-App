<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassSchedule">
    <ImageView
        android:id="@+id/bottom_graphics"
        android:layout_width="match_parent"
        android:layout_height="181dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-7dp"
        android:src="@drawable/logo2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="4">


                        <Spinner
                            android:layout_weight="2"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/spinner1"
                            android:padding="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/day_arrays"
                            android:prompt="@string/day_prompt" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/load"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="@color/card4"
                            app:cardCornerRadius="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textColor="@color/test_white"
                                android:textAlignment="center"
                                android:padding="15dp"
                                android:textSize="20sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Load"/>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>



                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view1"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/sub1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>



                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view2"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/sub2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view3"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/sub3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view_break"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/class_break"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiffin Break"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time_break"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="11:00 am"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view4"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/sub4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/card3"
                        android:id="@+id/card_view5"
                        app:cardCornerRadius="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TextView
                                android:textSize="20sp"
                                android:layout_weight="1"
                                android:id="@+id/sub5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject"
                                android:fontFamily="sans-serif-light" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textSize="20sp"
                                    android:layout_weight="1"
                                    android:id="@+id/time5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:fontFamily="sans-serif-light" />
                            </RelativeLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>