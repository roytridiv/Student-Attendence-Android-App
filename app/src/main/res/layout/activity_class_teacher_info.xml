<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassTeacherInfo"
    android:background="@color/test_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/bottom_graphics"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-7dp"
                android:src="@drawable/logo2" />
            <LinearLayout
                android:background="@color/teacher_card"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/teacher" />




            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                app:cardCornerRadius="5dp"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="5dp"
                            android:textSize="25sp"
                            android:id="@+id/father_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class Teacher"
                            android:fontFamily="sans-serif-light"
                            />

                        <TextView
                            android:id="@+id/mother_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mr . ABC"
                            android:paddingTop="5dp"
                            android:layout_margin="10dp"
                            android:textSize="17sp"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address : Polton, Dhaka  "
                            android:paddingTop="5dp"
                            android:layout_margin="10dp"
                            android:textSize="17sp"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/blood_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blood Group : A+"
                            android:paddingTop="5dp"
                            android:layout_margin="10dp"
                            android:textSize="17sp"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile : 01680541229 "
                            android:paddingTop="10dp"
                            android:layout_margin="5dp"
                            android:textSize="17sp"
                            android:fontFamily="sans-serif-light"
                            />

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.cardview.widget.CardView
                                app:cardBackgroundColor="@color/attendance"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/appointment_card"
                                app:cardCornerRadius="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="20dp">
                                <LinearLayout
                                    android:layout_margin="7dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:baselineAligned="false">
                                    <TextView
                                        android:textAlignment="center"
                                        android:textSize="17sp"
                                        android:id="@+id/call_teacher"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Call Teacher"
                                        android:fontFamily="sans-serif-condensed-medium" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>