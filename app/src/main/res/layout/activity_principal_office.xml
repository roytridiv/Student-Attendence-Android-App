<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalOffice"
    android:background="@color/test_white">
    <!--android:background="@drawable/uc" -->






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/bottom_graphics"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-7dp"
                android:src="@drawable/logo2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/principal_off"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="6">


                <RelativeLayout
                    android:layout_weight="1.8"
                    android:id="@+id/call_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView

                        app:cardBackgroundColor="@color/attendance"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/card_call"
                        app:cardCornerRadius="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="350dp"
                        android:layout_marginLeft="80dp">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <TextView
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:id="@+id/call_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Call Principal's Office"
                                android:fontFamily="sans-serif-condensed-medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="@color/card4"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/appointment_card"
                        app:cardCornerRadius="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="80dp">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <TextView
                                android:textAlignment="center"
                                android:textSize="20sp"
                                android:id="@+id/last_month2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set an Appointment"
                                android:fontFamily="sans-serif-condensed-medium" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>









</RelativeLayout>